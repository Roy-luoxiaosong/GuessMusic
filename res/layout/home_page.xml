<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/index_background">
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/index_bar"/>
    <ImageView 
        android:id="@+id/imageview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/index_title"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@drawable/index_between"
        android:src="@drawable/my_button_icon"
        android:layout_marginTop="100dp"
        android:layout_toLeftOf="@id/imageview1"
        android:layout_alignParentLeft="true"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@drawable/index_between"
        android:src="@drawable/imooc_button_icon"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/imageview1"
        android:layout_alignParentRight="true"/>
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="20dp"
        android:background="@drawable/index_rect"
        android:layout_below="@id/imageview1"
        android:layout_centerInParent="true">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/paly_home_button_icon"
            android:layout_gravity="center"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/game_level"/>
        </FrameLayout>
        
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/index_footer"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/index_medal"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</RelativeLayout>
